{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run ZenFlare Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/packages/ide-extension"],
      "outFiles": ["${workspaceFolder}/packages/ide-extension/out/**/*.js"]
    },
    {
      "name": "Run Deploy API",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/packages/deploy"
    },
    {
      "name": "Run Observability API",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/packages/observability"
    }
  ]
}
